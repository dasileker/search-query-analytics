<turbo-stream action="replace" target="search-results">
  <template>
    <div id="search-results">
      <% if @articles.present? %>
        <ul>
          <% @articles.each do |article| %>
            <li><%= article.title %></li>
          <% end %>
        </ul>
      <% else %>
        <p class="bg-success text-white">Search successefuly added to the search history and trends</p>
      <% end %>
    </div>
  </template>
</turbo-stream>

<%= render partial: 'searches/last_search' %>
